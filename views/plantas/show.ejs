<% layout('layouts/boilerplate')%>


    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card mb-3">
                    <img src="<%= planta.imatge %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= planta.nom %>
                        </h5>
                        <p class="card-text">
                            <%= planta.descripcio %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-planta text-muted"><b>Responsable: </b>
                            <%= planta.responsable.username %> %>
                        </li>
                        <li class="list-group-planta text-muted"><b>Zona: </b>
                            <%= planta.zona %>
                        </li>
                        <li class="list-group-planta text-muted"><b>Planta: </b>
                            <%= planta.planta %>
                        </li>
                        <li class="list-group-planta text-muted"><b>Àrea: </b>
                            <%= planta.area %>
                        </li>
                        <li class="list-group-planta text-muted"><b>Planta: </b>
                            <%= planta.planta %>
                        </li>
                        <li class="list-group-planta text-muted"><b>Planta: </b>
                            <%= planta.planta %>
                        </li>
                        <li class="list-group-planta text-muted"><b>Preu de cost: </b>
                            <%= planta.preu %>€
                        </li>
                    </ul>
                    <% if( currentUser && planta.responsable.equals(currentUser.id)) { %>
                    <div class="card-body">
                        <a href="/plantas/<%=planta.id%>/edit" class="card-link btn btn-info" class="card-link">Editar
                            Planta</a>
                        <form class="d-inline" action="/plantas/<%=planta._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Esborrar Planta</button>
                        </form>
                    </div>
                    <% } %>
                    <div class="card-footer text-muted">
                        <a href="/plantas">Totes les plantas</a>
                    </div>
                </div>
            </div>