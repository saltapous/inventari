<% layout('layouts/boilerplate')%>
    <h1>Tots els Zonas</h1>
    <div>
        <a href="/zonas/new">Afegeix Zona</a>
    </div>

    <% for (let zona of zonas){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=zona.imatge%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= zona.nom %></h5>

                        <p class="card-text"><%= zona.zona %></p>
<p class="card-text"><%= zona.descripcio %></p>
                        <p class="card-text">
                        <small class="text-muted"><%= zona.username %></small>
                        </p>
                        <a class="btn btn-primary" href="/zonas/<%=zona.id%>">Veure <%=zona.nom%> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>